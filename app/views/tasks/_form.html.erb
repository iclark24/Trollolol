<% if @task %>

  <%= form_with(model: [@list, @task], local: true, class: "ui form") do |f| %>
    <div class="field">
      <%= f.label "Task Name" %>
      <%= f.text_field :t_name, required: true, class: "input" %>
    </div>
    <div class="field">
      <%= f.label "Description" %>
      <%= f.text_field :description, required: true, class: "input" %>
    </div>
    <div class="field">
      <%= f.label "Priority" %>
      <%= f.number_field :t_priority, required: true, class: "input" %>
    </div>
  <%= f.submit nil, class: "ui blue button" %>
  <% end %>


<% else %>
  <%= form_with(model: [@list, @tasks], local: true, class: "ui form") do |f| %>
    <div class="field">
      <%= f.label "Task Name" %>
      <%= f.text_field :t_name, required: true, class: "input" %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description, required: true, class: "input" %>
    </div>
    <div class="field">
      <%= f.label "Priority" %>
      <%= f.number_field :t_priority, required: true, class: "input" %>
    </div>
    <%= f.submit nil, class: "ui blue button" %>
  <% end %>
<%end%>